<div class = "container">
<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default" style="box-shadow: 0 0 20px rgba(0,0,0,.5);">
    <div class="panel-heading">Sign up</div>
      <div class="panel-body">
        <%= form_for :user, url: '/users' do |f| %>
          <div class="form-group">
            Name: <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            Email: <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            Password: <%= f.password_field :password, class: 'form-control' %>
          </div>
          <div class="form-group">
            Password Confirmation: <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
          <div class="actions">
            <%= f.submit "Submit", class: 'btn btn-primary' %>
            <%= link_to 'Back', '/login', class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>